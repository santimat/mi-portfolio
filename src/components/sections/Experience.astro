---
import Section from "../Section.astro";

import { basics } from "@/cv.json";

import { work } from "@/cv.json";
console.log(work);
---

<Section title="Experiencia">
    <ul>
        {
            work.map(({ name, position, startDate, endDate, summary }) => {
                const startYear = new Date(startDate).getFullYear();
                const endYear = endDate
                    ? new Date(endDate).getFullYear()
                    : null;
                const years = `${startYear} - ${endYear || "Actualidad"}`;
                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>{name}</h3>
                                    <h4>{position}</h4>
                                </div>
                                <time>{years}</time>
                            </header>
                            <footer>
                                <p>{summary}</p>
                            </footer>
                        </article>
                    </li>
                );
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }
    article h3 {
        font-weight: 500;
        color: #111;
    }
    article h4 {
        color: #222;
        font-weight: 400;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
    time {
        font-size: 0.85rem;
        color: #555;
    }
</style>
