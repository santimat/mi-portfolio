---
import Section from "../Section.astro";

import { projects } from "@/cv.json";
---

<Section title="Proyectos">
    <ul>
        {
            projects.map(({ name, url, description, highlights, isActive }) => {
                return (
                    <li>
                        <article>
                            <header>
                                <h3>
                                    <a
                                        href={url}
                                        title={`Ver el proyecto ${name}`}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                    >
                                        {name}
                                    </a>
                                    {isActive && <span>&bull;</span>}
                                </h3>

                                <p>{description}</p>
                            </header>
                            <footer>
                                {highlights.map((highlight) => (
                                    <span>{highlight}</span>
                                ))}
                            </footer>
                        </article>
                    </li>
                );
            })
        }
    </ul>
</Section>
<style>
    ul {
        display: grid;
        /* De esta forma tenemos un grid responsive */
        grid-template-columns: repeat(
            /* Se adapta al tamanÌƒo del dispositivo */ auto-fit,
            /* Cada columna como minimo ocupa 200 px */ minmax(200px, 1fr)
        );
        gap: 1rem;
    }
    article {
        border-radius: 6px;
        border: 1px solid #f2f2f2;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
    }
    article a:hover {
        text-decoration: underline;
    }
    article p {
        font-size: 0.8rem;
        line-height: 1.2;
        margin-bottom: 8px;
    }
    article h3 span {
        color: rgb(0, 132, 48);
    }
    header {
        flex: 1;
    }

    h3 span {
        color: #151;
    }
    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
    }
    footer span {
        border-radius: 6px;
        background: #eee;
        color: #333;
        font-size: 0.7rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>
