---
import { basics } from "@/cv.json";
import Mail from "@/icons/Mail.astro";
import Phone from "@/icons/Phone.astro";
import Section from "@/components/Section.astro";
import X from "@/icons/X.astro";
import GitHub from "@/icons/GitHub.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import WorldMap from "@/icons/WorldMap.astro";

// Obtenemos los datos del CV
const { name, label, image, location, profiles, phone, email } = basics;
const { city, region, province } = location;

// Buscamos el profile que tenga LinkedIn como network y si existe obtenemos su username
const linkedinUser = profiles.find((p) => p.network === "LinkedIn")?.username;

// Creamos un objeto con las redes sociales
const social_icons: Record<string, any> = {
    GitHub,
    LinkedIn,
    X,
};
---

<Section>
    <section>
        <div class="container">
            <div class="info">
                <h1>
                    {name}
                </h1>
                <h2>{label}</h2>
                <span>
                    <WorldMap />
                    {city}, {province}
                    {region}
                </span>
                <footer class="print">
                    <p>Email:{email}</p>
                    <p>Telefono:{phone}</p>
                    <p>Linkedin:{linkedinUser}</p>
                </footer>
                <footer class="no-print">
                    {
                        email && (
                            <a
                                href={`mailto:${email}`}
                                title={`Enviar un correo electronico a ${name} al correo ${email}`}
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <Mail />
                            </a>
                        )
                    }
                    {
                        phone && (
                            <a
                                href={`tel:${phone}`}
                                title={`Llamar a ${name} al numero ${phone}`}
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <Phone />
                            </a>
                        )
                    }
                    {
                        profiles.map(({ network, url, username }) => {
                            const Icon = social_icons[network];

                            return (
                                <a
                                    href={url}
                                    title={`Ir a ${network} de ${name}`}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    <Icon />
                                </a>
                            );
                        })
                    }
                </footer>
            </div>

            <figure>
                <img src={image} alt={name} />
            </figure>
        </div>
    </section>
</Section>

<style>
    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }
    .info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 1rem;
    }
    h1 {
        font-size: 2rem;
    }
    h2 {
        color: #444;
        font-weight: 500;
        font-size: 1.1rem;
        text-wrap: balance;
    }
    img {
        aspect-ratio: 1/1;
        object-fit: cover;
        width: 128px;
        border-radius: 6px;
    }
    span {
        color: #666;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.85rem;
        letter-spacing: -0.05rem;
    }
    footer {
        font-size: 0.65rem;
        color: #555;
        display: flex;
        gap: 4px;
        margin-top: 8px;
    }
    footer a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: 0.3s ease;
    }
    footer a:hover {
        background: #ccc;
        border: 1px solid #ddd;
    }

    .print {
        display: none;
    }

    @media print {
        .print {
            display: block;
        }
        .no-print {
            display: none;
        }
    }
</style>
