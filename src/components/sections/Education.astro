---
import Section from "../Section.astro";
import { education } from "@/cv.json";
---

<Section title="Educacion">
    <ul>
        {
            education.map(({ institution, startDate, endDate, courses }) => {
                const startYear = new Date(startDate).getFullYear();
                const endYear = endDate;
                const years = `${startYear} - ${endYear || "En progreso"}`;
                const cuatrimestre = 1;
                return (
                    <li>
                        <article>
                            <header>
                                <h3>{institution}</h3>
                                <time>{years}</time>
                            </header>
                            <footer>
                                {courses[cuatrimestre].map((course) => (
                                    <p>{course}</p>
                                ))}
                            </footer>
                        </article>
                    </li>
                );
            })
        }
    </ul>

    <style>
        ul {
            display: flex;
            flex-direction: column;
            gap: 32px;
        }
        article h3 {
            font-weight: 500;
            color: #111;
        }
        article h4 {
            color: #222;
            font-weight: 400;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 4px;
        }
        time {
            font-size: 0.85rem;
            color: #555;
        }
    </style>
</Section>
