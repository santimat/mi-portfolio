---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" href="favicon.svg" type="image/svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>

<style is:global>
    @font-face {
        font-family: "Geist";
        src: url("/fonts/Geist.ttf");
    }

    html {
        font-family: "Geist", sans-serif;
    }
    body,
    figure {
        margin: 0;
        padding: 0;
    }
    a {
        text-decoration: none;
        color: inherit;
    }

    ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }
    *,
    *::after,
    *::before {
        box-sizing: border-box;
    }

    h1,
    h2,
    h3,
    h4 {
        margin: 0;
    }
    p {
        color: #666;
        font-size: 0.88rem;
        line-height: 1.5;
        margin: 0;
        text-wrap: pretty;
    }
</style>
